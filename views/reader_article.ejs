<!DOCTYPE html>
<html>
<head>
    <title><%= article.title %></title>
</head>
<body>
    <h1><%= article.title %></h1>
    <p>Published: <%= article.published_at %></p>
    <p>Views: <%= article.views %></p>
    <p>Likes: <%= article.likes %></p>
    <p><%= article.content %></p>

    <form action="/reader/article/<%= article.id %>/like" method="POST">
        <button type="submit">Like</button>
    </form>

    <button onclick="location.href='/reader'">Back</button>

    <h2>Comments</h2>
    <ul>
        <% comments.forEach(comment => { %>
            <li>
                <strong><%= comment.commenter_name %></strong>
                <p><%= comment.comment %></p>
                <p>Posted: <%= comment.created_at %></p>
            </li>
        <% }) %>
    </ul>

    <h2>Add a Comment</h2>
    <form action="/reader/article/<%= article.id %>/comment" method="POST">
        <label for="commenter_name">Name:</label>
        <input type="text" id="commenter_name" name="commenter_name" required><br>
        <label for="comment">Comment:</label>
        <textarea id="comment" name="comment" required></textarea><br>
        <button type="submit">Submit Comment</button>
    </form>
</body>
</html>
