<!DOCTYPE html>
<html>
<head>
    <title>Author Home Page</title>
</head>
<body>
    <h1>Author Home Page</h1>
    <h2>Blog Title: <%= blogTitle %></h2>
    <h3>Author Name: <%= authorName %></h3>
    <a href="/author/settings">Settings</a>
    <button onclick="location.href='/author/new'">Create new draft</button>

    <h2>Published Articles</h2>
    <ul>
        <% publishedArticles.forEach(article => { %>
            <li>
                <strong><%= article.title %></strong>
                <p>Created: <%= article.created_at %></p>
                <p>Published: <%= article.published_at %></p>
                <p>Last Modified: <%= article.last_modified %></p>
                <p>Reads: <%= article.views %></p>
                <p>Likes: <%= article.likes %></p>
                <a href="/reader/article/<%= article.id %>">Share Link</a>
                <form action="/author/delete/<%= article.id %>" method="POST">
                    <button type="submit">Delete</button>
                </form>
            </li>
        <% }) %>
    </ul>

    <h2>Draft Articles</h2>
    <ul>
        <% draftArticles.forEach(article => { %>
            <li>
                <strong><%= article.title %></strong>
                <p>Created: <%= article.created_at %></p>
                <p>Last Modified: <%= article.last_modified %></p>
                <a href="/author/edit/<%= article.id %>">Edit</a>
                <form action="/author/publish/<%= article.id %>" method="POST">
                    <button type="submit">Publish</button>
                </form>
                <form action="/author/delete/<%= article.id %>" method="POST">
                    <button type="submit">Delete</button>
                </form>
            </li>
        <% }) %>
    </ul>
</body>
</html>
